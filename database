CREATE DATABASE tcampo;
USE tcampo;
-- Database tCampo

CREATE TABLE Categoria (
    codigoCategoria INT NOT NULL PRIMARY KEY,
    nombreCategoria VARCHAR(50) NOT NULL
);

CREATE TABLE Producto (
    codigoProducto INT NOT NULL PRIMARY KEY,
    cantidadDisponible INT NOT NULL,
    nombreProducto VARCHAR(50) NOT NULL,
    precioDeCompra DOUBLE,
    precioDeVenta DOUBLE NOT NULL,
    descripcionProducto VARCHAR(50) NOT NULL,
    idCategoria INT REFERENCES Categoria(codigoCategoria)
);

CREATE TABLE Persona (
    idPersona INT,
    nombres VARCHAR(50),
    Apellidos VARCHAR(50),
    tipoPersona CHAR(1),/*C cliente, A administrador, E empleado*/
    telefono VARCHAR(19),
    email VARCHAR(30),
    direccion VARCHAR(30),
    password VARCHAR(30)
);

INSERT INTO Persona VALUES 
(1,'David Leonardo','Espinosa Ochoa','A','123456','david.espinosa@uptc.edu.co','Clle 1 #2-3','12345');

DROP TABLE Categoria;
DROP TABLE Producto;
DROP TABLE Persona;